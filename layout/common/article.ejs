<article class="post_item post_item_column">
    <div class="post_item_info">
        <% if(post.link){ %>
            <div class="post_item_title">
                <a href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>    
            </div>
            <%- partial("post/gallery") %>
            <% if(index && post.excerpt) { %>
                <div class="post_item_summary"><%- post.excerpt %></div>
            <% } else { %>
                <%- post.content %>
            <% } %>
        <% } else if(post.title) { %>
            <% if (index) { %>
                <div class="post_item_title">
                    <a href="<%- url_for(post.path) %>"><%= post.title %></a>    
                </div>
                <%- partial("post/gallery") %>
                <% if(post.excerpt) { %>
                    <div class="post_item_summary"><%- post.excerpt %></div>
                <% } else { %>
                    <%- post.content %>
                <% } %>
            <% } else { %>
                <div class="post_item_title"><%= post.title %></div>
                <%- partial("post/gallery") %>
                <% if(post.excerpt) { %>
                    <div class="post_item_summary"><%- post.excerpt %></div>
                <% } else { %>
                    <%- post.content %>
                <% } %>
            <% } %>
        <% } %>
    </div>
    <div class="post_item_footer">
        <span class="left_date">
            <span>2017-04-08</span>
        </span>
        <a href="" class="showall">查看全文</a>
    </div>
</article>
<% if (!index) { %>
    <%- partial('comment/index') %>
<% } %>